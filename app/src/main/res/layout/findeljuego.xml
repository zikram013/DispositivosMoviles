<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ndroid="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".FinDeJuego"
    tools:ignore="Deprecated">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/buenaPuntuacion"
        android:layout_width="358dp"
        android:layout_height="215dp"
        android:layout_x="16dp"
        android:layout_y="228dp"
        android:src="@drawable/congrats"
        ndroid:layout_constraintBottom_toBottomOf="parent"
        ndroid:layout_constraintEnd_toEndOf="parent"
        ndroid:layout_constraintStart_toStartOf="parent"
        ndroid:layout_constraintTop_toTopOf="parent" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/malaPuntuacion"
        android:layout_width="369dp"
        android:layout_height="221dp"
        android:layout_x="16dp"
        android:layout_y="228dp"
        android:src="@drawable/malo"
        ndroid:layout_constraintBottom_toBottomOf="parent"
        ndroid:layout_constraintEnd_toEndOf="parent"
        ndroid:layout_constraintStart_toStartOf="parent"
        ndroid:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/volver"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_x="37dp"
        android:layout_y="502dp"
        android:text="@string/volver"
        ndroid:layout_constraintBottom_toBottomOf="parent"
        ndroid:layout_constraintEnd_toEndOf="parent"
        ndroid:layout_constraintStart_toStartOf="parent"
        ndroid:layout_constraintTop_toBottomOf="@+id/buenaPuntuacion" />

    <TextView
        android:id="@+id/puntuacionFinal"
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:layout_x="29dp"
        android:layout_y="172dp"
        android:text=""
        ndroid:layout_constraintBottom_toTopOf="@+id/buenaPuntuacion"
        ndroid:layout_constraintEnd_toEndOf="parent"
        ndroid:layout_constraintStart_toStartOf="parent"
        ndroid:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>