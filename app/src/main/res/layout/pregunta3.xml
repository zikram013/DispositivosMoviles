<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    tools:context=".Pregunta3">

    <TextView
        android:id="@+id/pregunta3"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_x="-2dp"
        android:layout_y="223dp"
        android:text="¿Qué día desaparece Will Byers de Hawkins en la serie de «STRANGER THINGS»?"
        app:layout_constraintBottom_toTopOf="@+id/respuesta1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.846"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/puntuacionFinal"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_x="250dp"
        android:layout_y="103dp"
        android:text=""
        app:layout_constraintBottom_toTopOf="@id/pregunta3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.167"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.694" />

    <Button
        android:id="@+id/respuesta1"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="305dp"
        android:background="#00BCD4"
        android:text="8 de noviembre 1983"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/respuesta2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.922"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/respuesta2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="360dp"
        android:background="#E91E63"
        android:text="6 de noviembre 1983"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/respuesta3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.933"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/respuesta3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="417dp"
        android:background="#FF5722"
        android:text="10 de noviembre 1983"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/respuesta4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.941"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/respuesta4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="473dp"
        android:background="#9C27B0"
        android:text="5 de noviembre 1983"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/siguientePregunta"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.94"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/siguientePregunta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="567dp"
        android:background="#4CAF50"
        android:text="@string/siguiente"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/volver"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.936"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/volver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="622dp"
        android:background="#4CAF50"
        android:text="@string/volver"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.849"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />
</android.support.constraint.ConstraintLayout>