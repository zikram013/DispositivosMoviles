<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/bienvenido_a_trivialix"
        android:textColor="@android:color/black"
        android:textSize="35sp" />

    <Button
        android:id="@+id/startTrivialix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/podras_adivinar_todas" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tematicas"
        android:layout_alignStart="@+id/startTrivialix"
        android:layout_below="@+id/startTrivialix"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/puntos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/startTrivialix"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:text="@string/record"
        android:textSize="20sp" />


</RelativeLayout>